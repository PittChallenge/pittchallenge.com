doctype html
html
    include z_index_src/head

    script.
        const redirectURLs = {
            "CheckIn": "/checkin",
            "Devpost": "https://pittchallenge2023.devpost.com",
            "TeamRegistration": null,
            "MentorHelp": null,
            "Judging": null,
            "ChatGPT": null,
            "ChatGPT-Submission": null,
        };
        const path = window.location.pathname.toLowerCase().substring(1);
        for (const key in redirectURLs) { redirectURLs[key.toLowerCase()] = redirectURLs[key]; }
        if (redirectURLs[path]) { window.location.replace(redirectURLs[path] + window.location.search); }

